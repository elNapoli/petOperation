<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvPet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/mb_20"
    android:layout_margin="@dimen/margin_15"
    card_view:cardCornerRadius="@dimen/rcv_5"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/tigre" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_10">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/mb_20"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_alignParentLeft="true">
                <ImageView
                    android:id="@+id/ivBoneOn"
                    android:layout_width="@dimen/bone"
                    android:layout_height="@dimen/bone"
                    android:src="@drawable/animals_dog_bone_icon"/>
                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:text="@string/name_pet"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:textSize="@dimen/mb_20"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginRight="@dimen/mb_20"
                android:layout_alignParentRight="true">

                <TextView
                    android:id="@+id/tvRating"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_10"

                    android:text="@string/rating"/>
                <ImageView
                    android:id="@+id/ivBoneOff"
                    android:layout_width="@dimen/bone"
                    android:layout_height="@dimen/bone"
                    android:src="@drawable/bone_off"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>